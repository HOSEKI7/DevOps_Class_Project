generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  genre       String
  synopsis    String
  duration    Int
  director    String
  releaseYear Int
  trailer     String?
  streamUrl   String?
  logo        String?
  backdrop    String?
  poster      String?
  rating      Float?   @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}